extends layout

block main
  form(action="/demo/addlocation" method="post")
    h2 Add a Location
    dl
      dt
        label(for="latitude") Latitude:
      dd
        input(type="text"
              id="latitude"
              name="latitude")
              
      dt
        label(for="longitude") Longitude:
      dd
        input(type="text"
              id="longitude"
              name="longitude")

    fieldset.actions
      input(type="submit" value="Submit location")
    
  form(method="post" action="/demo/signout") 
    input(type="hidden" name="extra_submit_param" value="extra_submit_value")
      
    fieldset.signout
      input(type="submit" value="Sign Out")
